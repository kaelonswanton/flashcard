<%= render '/shared/flash'%>
<div class="bg-gray-700 px-4 overflow-hidden">
  <div class=" text-4xl pb-24 flex flex-col items-center mx-20">
    <p class="mt-8 mb-20"> <%= @flashcard.front %> </p>
    <%# Back Container %>
    <%# DaisyUI Swap - bugged? %>
    <div class="flex justify-center w-full h-full">
      <div class= "w-64 h-64 flex items-center justify-center">
        <label class="swap">
          <input type="checkbox" />
          <div class="swap-off">Click to reveal card</div>
          <div class="swap-on"><%= @flashcard.back %> </div>
        </label>
      </div>
    </div>

  </div>

  <%# Update Flashcard %>
   <div class="flex justify-center"><%= render 'shared/update_card_form'%></div>

  <div class="flex justify-end p-2 mt-20"> 
    Cards Remaining: <%= session[:fetched_flashcards].length - @page_number  %>
  </div>
</div>