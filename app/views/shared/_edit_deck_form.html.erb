<div class=" justify-center flex">
  <%= form_with(model: @deck, local: true) do |f| %>
    <div class="flex flex-col mt-12 text-black">
      <%= f.text_field :name, placeholder: "Enter new deck name" %>
      <%= f.submit "Update", class: "rounded-md p-2 text-slate-400 bg-color-primary hover:bg-color-secondary" %>
    </div>
  <% end %>
</div>