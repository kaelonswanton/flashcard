<%= form_with(url: deck_review_path(@deck), method: :patch) do |f| %>
  <%# Add in this to make the form get the URL id params. %>
  <div class="flex">
    <%= f.submit "Easy", name: "rating", value: "Easy", class: "btn w-20 mx-2 bg-color-primary hover:bg-color-secondary" %>
    <%= f.submit "Medium", name: "rating", value: "Medium", class: "btn w-20 mx-2 bg-color-primary hover:bg-color-secondary" %>
    <%= f.submit "Hard", name: "rating", value: "Hard", class: "btn w-20 mx-2 bg-color-primary hover:bg-color-secondary" %>
  </div>
<% end %>

