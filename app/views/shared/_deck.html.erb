<% if current_user.decks.present? %>
  <div class="divide-y-2 divide-gray-800">
    <% @decks.each do |deck| %>
      <div class=" mb-2 py-2 ">

        <div class="flex flex-col">
          <%= link_to deck.name, deck_path(deck) %>
          <%= button_to "Review", '#', class: "rounded-md p-2 text-slate-400 bg-indigo-700 hover:bg-indigo-800" %>
        </div>

        <div class="">
          <%= button_to "Delete", deck, method: :delete, data: { turbo_confirm: "Are you sure" }, class: "text-gray-300 hover:text-gray-200" %>
          <%= link_to "Edit name", edit_deck_path(deck), method: :delete, class: "text-gray-300 hover:text-gray-200" %>   
        </div>  

      </div>
    <% end %>
  </div>
<% end %>
