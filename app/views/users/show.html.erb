<h1 class="flex justify-center text-4xl"><%= "#{@user.username}'s Decks" %></h1>
<% if @user.decks.empty? %>
  <p class="text-indigo-600"><%= "#{@user.username} currently has no decks created." %></p>
<% else %>
  <div class="divide-y-2 divide-gray-800">
    <% @decks.each do |deck| %>
      <div class="divide-y-2 divide-gray-800">

        <div class=" flex justify-between items-center my-2">
          <div class=" text-blue-500 hover:text-blue-600"><%= link_to deck.name, deck_path(deck) %> </div>
        </div>
    <% end %>
  </div>
  <%end%>